
{
  "manifest_version": 3,
  "name": "Stillness.io - Digital Sabbath",
  "version": "1.0",
  "description": "Block distracting websites during your digital sabbath",
  "permissions": [
    "webNavigation",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
